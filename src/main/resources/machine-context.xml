<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- DEFINITION ACTION FOR PREPARATION -->
    <bean id="preparationActionInit" class="fr.demo.state.preparation.config.PreparationAction">
        <constructor-arg name="orderEvent" value="VALIDATE_PREPARATION"/>
    </bean>

    <bean id="preparationActionDelete" class="fr.demo.state.preparation.config.PreparationAction">
        <constructor-arg name="orderEvent" value="UNVALIDATE_PREPARATION"/>
    </bean>

    <bean id="preparationActionStart" class="fr.demo.state.preparation.config.PreparationAction">
        <constructor-arg name="orderEvent" value="START_PREPARATION"/>
    </bean>

    <!-- DEFINITION ACTION FOR ORDER -->
    <bean id="fromStockFlowGuard" class="fr.demo.state.order.config.OrderFlowGuard">
        <constructor-arg name="targetFlow" value="FROM_STOCK"/>
    </bean>

    <bean id="jitFlowGuard" class="fr.demo.state.order.config.OrderFlowGuard">
        <constructor-arg name="targetFlow" value="JIT"/>
    </bean>

    <bean id="toStockFlowGuard" class="fr.demo.state.order.config.OrderFlowGuard">
        <constructor-arg name="targetFlow" value="TO_STOCK"/>
    </bean>

    <!-- STATE MACHINE MONITORS-->
    <bean id="stateMachineMonitor" class="fr.demo.state.monitor.DemoStateMachineMonitor"/>

</beans>